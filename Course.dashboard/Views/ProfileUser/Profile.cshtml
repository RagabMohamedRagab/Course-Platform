@model ProfileUserViewModel;
@{
    ViewData["Title"] = "Profile";
}
<section class="Profie">
    <!--Test If Object Is null-->
    @if (Model != null)
    {
        <!--Image-->
        <div class="roles row">
            <div class="user-photo col-md-12 text-center">
                @if (String.IsNullOrEmpty(Model.img))
                {
                    <img src="~/Images/Profile/Profile.png" alt="@Model.Name" />
                }
                else
                {
                    <img src="~/Images/Profile/@Model.img" alt="@Model.Name"/>
                }
                @if (String.IsNullOrEmpty(Model.Name))
                {
                    <h4 class="name">Your Name</h4>
                }
                else
                {
                    <h4 class="name">@Model.Name</h4>
                }
                <i data-toggle="modal" data-target="#Photo" class="bi bi-pencil-square"></i>
            </div>
        </div>
        <div class="row roles user-media">
            <div class="user-socialmedia">
                <a href="@Model.Facebook" target="_blank"><i class="bi bi-facebook"></i></a>
                <a href="@Model.Twitter" target="_blank"><i class="bi bi-twitter"></i></a>
                <a href="@Model.Instagram" target=" _blank"><i class="bi bi-instagram"></i></a>
            </div>
            <i class="bi bi-pencil-square"></i>
        </div>
        <div class="row roles about-user">
            @if (string.IsNullOrEmpty(Model.About))
            {
                <p class="about">Tell Us About YourSelf</p>
            }
            else
            {
                <p>@Model.About</p>
            }
            <i class="bi bi-pencil-square"></i>
        </div>
    }
</section>
 <!--Popup for Photo and Name-->
<div id="Photo" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title text-center">Edit</h4>
            </div>
            <div class="modal-body">
                <form method="post" asp-action="UpdateNameAndPhoto" asp-controller="ProfileUser">
                    <div asp-validation-summary="ModelOnly"></div>
                    <div class="form-group">
                        <input type="text" class="form-control" placeholder="Name" id="Name" name="username" />
                    </div>
                    <div class="form-group">
                        <input type="file" class="form-control" placeholder="Your Image" id="photo" name="userphoto" />
                    </div>
                    <div class="form-group">
                        <input type="submit" class="btn btn-primary" value="Update" />
                    </div>
               </form>
            </div>
        </div>
    </div>
</div>





