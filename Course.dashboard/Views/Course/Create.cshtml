@model CourseViewModel
@{
    ViewData["Title"] = "Add Course";
}
<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12" style="
                         margin-top: 2rem;">
    <div class="product-payment-inner-st">
        <div id="myTabContent" class="tab-content custom-product-edit">
            <div>
                <div class="row">
                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12" >
                        <div class="review-content-section">
                            <div id="dropzone1" class="pro-ad addcoursepro">
                                <form asp-controller="Course" asp-action="Create" asp-antiforgery="true" asp-route-UserId="@(User.Identity?.Name)" enctype="multipart/form-data" class="dropzone dropzone-custom needsclick addcourse dz-clickable" id="demo1-upload" novalidate="novalidate">
                                    <div asp-validation-summary="ModelOnly"></div>
                                    <div class="row">
                                        <div class="col-md-10">
                                                <div>
                                                    <select class="form-control" asp-for="@Model.course.TitleId" asp-items="@(new SelectList(Model?.Titles,"Id","Name"))">
                                                        <option disabled selected>Select Title</option>
                                                    </select>
                                                </div>
                                        </div>
                                        <div class="col-md-2">
                                            <button type="button" data-toggle="modal" data-target="#myModal" class="btn btn-primary" style="background-color: #006df0;outline: none;">Add Title</button>
                                        </div>
                                    </div>
                                    <div class="row">

                                        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                            <div class="form-group">
                                                <input asp-for="@Model.course.Name" type="text" class="form-control" placeholder="Video Name">
                                            </div>
                                           
                                            <div class="form-group alert-up-pd">
                                                <div class="dz-message needsclick download-custom" style="cursor:pointer;border: 1px solid #ddd;padding: 2rem;">
                                                    <label for="upload" class="form-label">
                                                        <i class="fa fa-download edudropnone" aria-hidden="true"></i>
                                                        <h2 class="edudropnone">Drop Video here or click to upload.</h2>
                                                        <p class="edudropnone">
                                                            <span class="note needsclick">(This is just a demo dropzone. Selected Video is <strong>not</strong> actually uploaded.)</span>
                                                        </p>
                                                    </label>
                                                    <input asp-for="@Model.course.Logo" class="hd-pro-img" type="file" id="upload" class="form-control">
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                            <div class="form-group">
                                                <textarea asp-for="@Model.course.Description" placeholder="Description"></textarea>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <button type="submit" class="btn btn-primary waves-effect waves-light">Save</button>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!--Popup-->
<div class="modal fade" id="myModal">
    <div class="modal-dialog">
        <form class="modal-content" method="post" asp-area="" asp-controller="Course" asp-action="Title" asp-antiforgery="true" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly"></div>
            <div class="modal-body">
                <div class="form-group">
                    <input asp-for="@Model.Title.Name" class="form-control" placeholder="Title">
                    <span asp-validation-for="@Model.Title.Name" class="text-danger error"></span>
                </div>
                <div class="form-group">
                    <input asp-for="@Model.Title.Price" class="form-control" placeholder="Video Price" value="">
                    <span asp-validation-for="@Model.Title.Price" class="text-danger error"></span>
                </div>
                <div class="form-group">
                    <input asp-for="@Model.Title.Logo" class="form-control" />
                </div>
            </div> 
            <div class="form-group modal-footer" style="display: flex;justify-content: end;">
                <input type="submit" class="btn btn-primary" style="background-color: #006df0;" value="Next">
            </div>
        </form>
    </div>
</div>

@section Scripts{
    <script>
  
        function Fun() {
                $("#go").click();
            }

    </script>
}