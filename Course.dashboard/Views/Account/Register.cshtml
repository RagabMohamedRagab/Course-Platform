@model RegisterViewModel;
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Register";
}

<div class="error-pagewrap">
    <div class="error-page-int">
        <div class="text-center custom-login">
            <h3>Registration</h3>
        </div>
        <div class="content-error">
            <div class="hpanel">
                <div class="panel-body">
                    <form method="post" asp-controller="Account" asp-action="Register" asp-antiforgery="true" id="loginForm">
                        <div asp-validation-summary="ModelOnly" class="text-danger error"></div>
                        <div class="row">
                            <div class="form-group col-lg-12">
                                <label asp-for="Username"></label>
                                <input asp-for="Username" class="form-control">
                                <span asp-validation-for="Username" class="text-danger error"></span>
                            </div>
                            <div class="form-group col-lg-6">
                                <label asp-for="Password"></label>
                                <input  asp-for="Password" class="form-control">
                                <span asp-validation-for="Password" class="text-danger error"></span>
                            </div>
                            <div class="form-group col-lg-6">
                                <label asp-for="RepeatPassword"></label>
                                <input asp-for="RepeatPassword" class="form-control">
                                <span asp-validation-for="RepeatPassword" class="text-danger error"></span>
                            </div>
                            <div class="form-group col-lg-6">
                                <label asp-for="EmailAddress"></label>
                                <input asp-for="EmailAddress" class="form-control">
                                <span asp-validation-for="EmailAddress" class="text-danger error"></span>
                            </div>
                            <div class="form-group col-lg-6">
                                <label asp-for="RepeatEmailAddress"></label>
                                <input asp-for="RepeatEmailAddress" class="form-control">
                                <span asp-validation-for="RepeatEmailAddress" class="text-danger error"></span>
                            </div>
                        </div>
                        <div class="text-center">
                            <input type="submit" class="btn btn-default" value="Register" />
                            <a class="btn btn-default" asp-controller="Account" asp-action="Login">Login</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}