@model IEnumerable<ContactUsViewModel>
@{
    ViewData["Title"] = "Messages";
}

<section class="roles">
    <div class="row">
        <div class="col-md-12">
            <h1> Conatct us From Clients </h1>
        </div>
        <div class="col-md-10" style="margin-top:20px">
            <table class="table table-hover table-striped" id="table">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Message</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                     @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Name</td>
                            <td>@item.Email</td>
                            <td>@item.Message</td>
                            <td>
@*                                <a class="btn btn-primary" asp-controller="Contact" asp-action="Delete"><i class="bi bi-check2"></i></a>
*@
                                <a class="btn btn-danger" asp-controller="ContactUs" asp-action="Delete" asp-route-Id="@item.Id"><i class='bi bi-trash3-fill'></i></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</section>

@section Scripts{
    <Partial name="_ValidationScriptsPartial" />
}